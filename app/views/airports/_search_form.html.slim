= form_tag url_for, class: "form-inline", method: :get do
  .input-group.input-group-lg
    = text_field_tag :query, params[:query], class: "form-control search-query", id: "airport-search", autocomplete: "off", placeholder: "Enter your destination"
    .input-group-btn
      = link_to "clear", url_for, class: "btn btn-primary"